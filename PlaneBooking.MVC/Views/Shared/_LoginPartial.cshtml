@using Microsoft.AspNetCore.Identity
@using PlaneBooking.MVC.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    
    <ul class="nav navbar-nav">
        <li>
            <a asp-area="" asp-controller="Airports" asp-action="Index" title="Manage">Airports</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Planes" asp-action="Index" title="Manage">Planes</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Tutors" asp-action="Index" title="Manage">Tutors</a>
        </li>
    </ul>
   
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>*@
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
