@model PlaneBooking.Models.Entities.Plane

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Plane</h4>
<hr />
<div class="row">
